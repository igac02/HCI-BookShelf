<Application x:Class="BookShelf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BookShelf">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- 
                Ovdje spajamo fajlove sa temama.
                Ova linija postavlja 'LightTheme.xaml' kao početnu, podrazumijevanu temu aplikacije.
                Naš ThemeManager će kasnije dinamički mijenjati ovaj izvor (Source).
                -->
                <ResourceDictionary Source="/Themes/LightTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
