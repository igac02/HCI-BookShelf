<Window x:Class="BookShelf.Views.AdminOrdersView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookShelf.Views"
        xmlns:viewModels="clr-namespace:BookShelf.ViewModels"
        mc:Ignorable="d"
        Title="Admin - View Orders" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        d:DataContext="{d:DesignInstance Type=viewModels:AdminOrdersViewModel, IsDesignTimeCreatable=True}">

    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" MinWidth="300"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="1*" MinWidth="250"/>
        </Grid.ColumnDefinitions>

        <!-- Column 0: List of all Orders -->
        <DockPanel Grid.Column="0">
            <TextBlock DockPanel.Dock="Top" Text="All Orders" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
            <DataGrid ItemsSource="{Binding Orders}"
                      SelectedItem="{Binding SelectedOrder}"
                      AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding OrderID}" Width="50"/>
                    <DataGridTextColumn Header="Date" Binding="{Binding OrderDate, StringFormat='dd.MM.yyyy HH:mm'}" Width="150"/>
                    <DataGridTextColumn Header="Customer" Binding="{Binding User.FullName}" Width="*"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                    <DataGridTextColumn Header="Total" Binding="{Binding TotalPrice, StringFormat={}{0:C}}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>

        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="LightGray"/>

        <!-- Column 2: Details of the Selected Order -->
        <DockPanel Grid.Column="2" Margin="10,0,0,0" DataContext="{Binding SelectedOrder}">
            <TextBlock DockPanel.Dock="Top" FontSize="18" FontWeight="Bold" Margin="0,0,0,10">
                <Run Text="Order Details #"/>
                <Run Text="{Binding OrderID}"/>
            </TextBlock>

            <GroupBox DockPanel.Dock="Top" Header="Customer Info" Padding="5">
                <StackPanel>
                    <TextBlock><Run Text="Name: "/><Run Text="{Binding User.FullName}" FontWeight="SemiBold"/></TextBlock>
                    <TextBlock Margin="0,5,0,0"><Run Text="Email: "/><Run Text="{Binding User.Email}" FontWeight="SemiBold"/></TextBlock>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Order Items" Margin="0,15,0,0" Padding="5">
                <ListView ItemsSource="{Binding OrderItems}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{Binding Book.Title}" ToolTip="{Binding Book.Title}"/>
                                <TextBlock Grid.Column="1" Margin="10,0,0,0">
                                     <Run Text="{Binding Quantity}"/>x<Run Text="{Binding PricePerItem, StringFormat={}{0:C}}"/>
                                </TextBlock>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </GroupBox>
        </DockPanel>
    </Grid>
</Window>
