<Window x:Class="BookShelf.Views.AdminOrdersView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookShelf.Views"
        xmlns:viewModels="clr-namespace:BookShelf.ViewModels"
        mc:Ignorable="d"
        Title="BookShelf - Admin Orders" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        d:DataContext="{d:DesignInstance Type=viewModels:AdminOrdersViewModel, IsDesignTimeCreatable=True}">

    <Window.Resources>
        <!-- Modern Color Palette -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#2C3E50"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#3498DB"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#27AE60"/>
        <SolidColorBrush x:Key="DangerBrush" Color="#E74C3C"/>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#F8F9FA"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#2C3E50"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#7F8C8D"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#E5E5E5"/>
        <SolidColorBrush x:Key="HoverBrush" Color="#F1F2F6"/>
        <SolidColorBrush x:Key="CardBrush" Color="#FFFFFF"/>

        <!-- Modern DataGrid Style -->
        <Style x:Key="ModernDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="RowHeight" Value="50"/>
            <Setter Property="ColumnHeaderHeight" Value="45"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserReorderColumns" Value="False"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
        </Style>

        <!-- Modern DataGrid Cell Style -->
        <Style x:Key="ModernDataGridCell" TargetType="DataGridCell">
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ListView Style -->
        <Style x:Key="ModernListView" TargetType="ListView">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListView">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer Padding="10">
                                <ItemsPresenter/>
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card Style -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.05" ShadowDepth="2" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Group Box Style -->
        <Style x:Key="ModernGroupBox" TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Border Background="White" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Header -->
                                <Border Grid.Row="0" 
                                        Background="{StaticResource SurfaceBrush}" 
                                        Padding="15,10"
                                        CornerRadius="6,6,0,0">
                                    <TextBlock Text="{TemplateBinding Header}" 
                                               FontWeight="SemiBold" 
                                               FontSize="14"
                                               Foreground="{StaticResource PrimaryBrush}"/>
                                </Border>

                                <!-- Content -->
                                <ContentPresenter Grid.Row="1" 
                                                  Margin="{TemplateBinding Padding}"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="{StaticResource DangerBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C0392B"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <!-- Main Container with Shadow Effect -->
    <Border Background="{StaticResource BackgroundBrush}"
            CornerRadius="12"
            Margin="10">
        <Border.Effect>
            <DropShadowEffect Color="Black"
                            Opacity="0.15"
                            ShadowDepth="8"
                            BlurRadius="20"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <Grid Grid.Row="0" Background="{StaticResource SurfaceBrush}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title Section -->
                <StackPanel Grid.Column="0"
                           Orientation="Horizontal"
                           VerticalAlignment="Center"
                           Margin="30,20">
                    <!-- Orders Icon -->
                    <Viewbox Width="32" Height="32" Margin="0,0,15,0">
                        <Canvas Width="24" Height="24">
                            <Path Fill="{StaticResource AccentBrush}"
                                  Data="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zM9 17H7v-7h2v7zm4 0h-2V7h2v10zm4 0h-2v-4h2v4z"/>
                        </Canvas>
                    </Viewbox>

                    <StackPanel>
                        <TextBlock Text="Order Management"
                                   FontSize="24"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource PrimaryBrush}"/>
                        <TextBlock Text="View and manage all customer orders"
                                   FontSize="14"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Close Button -->
                <Button Grid.Column="1"
                        Width="40" Height="40"
                        Margin="20"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="16"
                        Foreground="{StaticResource TextSecondaryBrush}"
                        Content="✕"
                        Click="CloseButton_Click"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="20">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F0F0F0"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <!-- Main Content Area -->
            <Grid Grid.Row="1" Margin="30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" MinWidth="400"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="1*" MinWidth="300"/>
                </Grid.ColumnDefinitions>

                <!-- Left Panel - Orders List -->
                <Border Grid.Column="0" Style="{StaticResource Card}">
                    <Grid Margin="25">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Orders Header -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                            <Viewbox Width="20" Height="20" Margin="0,0,8,0">
                                <Canvas Width="24" Height="24">
                                    <Path Fill="{StaticResource AccentBrush}" 
                                          Data="M9 17H7v-7h2v7zm4 0h-2V7h2v10zm4 0h-2v-4h2v4z"/>
                                </Canvas>
                            </Viewbox>
                            <TextBlock Text="All Orders"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource PrimaryBrush}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Orders DataGrid -->
                        <DataGrid Grid.Row="1"
                                  ItemsSource="{Binding Orders}"
                                  SelectedItem="{Binding SelectedOrder}"
                                  AutoGenerateColumns="False" 
                                  IsReadOnly="True" 
                                  Style="{StaticResource ModernDataGrid}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" 
                                                    Binding="{Binding OrderID}" 
                                                    Width="60"
                                                    CellStyle="{StaticResource ModernDataGridCell}"/>
                                <DataGridTextColumn Header="Date" 
                                                    Binding="{Binding OrderDate, StringFormat='dd.MM.yyyy HH:mm'}" 
                                                    Width="140"
                                                    CellStyle="{StaticResource ModernDataGridCell}"/>
                                <DataGridTextColumn Header="Customer" 
                                                    Binding="{Binding User.FullName}" 
                                                    Width="*"
                                                    CellStyle="{StaticResource ModernDataGridCell}"/>
                                <DataGridTemplateColumn Header="Status" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Background="{StaticResource SurfaceBrush}"
                                                    CornerRadius="12"
                                                    Padding="8,4"
                                                    HorizontalAlignment="Center">
                                                <TextBlock Text="{Binding Status}" 
                                                           FontSize="11"
                                                           FontWeight="SemiBold"
                                                           Foreground="{StaticResource TextPrimaryBrush}"
                                                           HorizontalAlignment="Center"/>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Total" 
                                                    Binding="{Binding TotalPrice, StringFormat={}{0:C}}" 
                                                    Width="100"
                                                    CellStyle="{StaticResource ModernDataGridCell}"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Orders Count -->
                        <Border Grid.Row="2" 
                                Background="{StaticResource SurfaceBrush}"
                                CornerRadius="4"
                                Padding="12,8"
                                Margin="0,15,0,0"
                                HorizontalAlignment="Left">
                            <TextBlock Text="{Binding Orders.Count, StringFormat={}{0} orders total}"
                                       FontSize="12"
                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Right Panel - Order Details -->
                <Border Grid.Column="2" Style="{StaticResource Card}">
                    <Grid Margin="25" DataContext="{Binding SelectedOrder}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Order Details Header -->
                        <StackPanel Grid.Row="0" Margin="0,0,0,20">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <Viewbox Width="20" Height="20" Margin="0,0,8,0">
                                    <Canvas Width="24" Height="24">
                                        <Path Fill="{StaticResource AccentBrush}" 
                                              Data="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z"/>
                                    </Canvas>
                                </Viewbox>
                                <TextBlock FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource PrimaryBrush}"
                                           VerticalAlignment="Center">
                                    <Run Text="Order #"/>
                                    <Run Text="{Binding OrderID}"/>
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>

                        <!-- Order Details Content -->
                        <StackPanel Grid.Row="1">
                            <!-- Customer Info -->
                            <GroupBox Header="Customer Information" Style="{StaticResource ModernGroupBox}">
                                <StackPanel>
                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" 
                                                   Text="Name:" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   Margin="0,0,10,0"/>
                                        <TextBlock Grid.Column="1">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0} {1}">
                                                    <Binding Path="User.FirstName"/>
                                                    <Binding Path="User.LastName"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </Grid>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" 
                                                   Text="Email:" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   Margin="0,0,10,0"/>
                                        <TextBlock Grid.Column="1" Text="{Binding User.Email}"/>
                                    </Grid>
                                </StackPanel>
                            </GroupBox>

                            <!-- Order Items -->
                            <GroupBox Header="Order Items" Style="{StaticResource ModernGroupBox}">
                                <ListView ItemsSource="{Binding OrderItems}" Style="{StaticResource ModernListView}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="White" 
                                                    BorderBrush="{StaticResource BorderBrush}" 
                                                    BorderThickness="0,0,0,1" 
                                                    Padding="0,8">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0" 
                                                               Text="{Binding Book.Title}" 
                                                               FontWeight="Medium"
                                                               TextTrimming="CharacterEllipsis"
                                                               ToolTip="{Binding Book.Title}"/>

                                                    <StackPanel Grid.Column="1" 
                                                                Orientation="Horizontal" 
                                                                Margin="15,0,0,0">
                                                        <Border Background="{StaticResource SurfaceBrush}"
                                                                CornerRadius="3"
                                                                Padding="6,2">
                                                            <TextBlock Text="{Binding Quantity, StringFormat={}x{0}}" 
                                                                       FontSize="11"
                                                                       FontWeight="SemiBold"/>
                                                        </Border>
                                                        <TextBlock Text="{Binding PricePerItem, StringFormat={}{0:C}}" 
                                                                   FontWeight="SemiBold"
                                                                   Margin="8,0,0,0"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </GroupBox>

                            <!-- Order Summary -->
                            <Border Background="{StaticResource SurfaceBrush}" 
                                    CornerRadius="6" 
                                    Padding="15"
                                    Margin="0,10,0,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                               Text="Total Amount:" 
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding TotalPrice, StringFormat={}{0:C}}" 
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Foreground="{StaticResource AccentBrush}"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>