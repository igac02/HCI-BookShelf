<!-- File: Themes/CrazyTheme.xaml -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Definicije boja za "Ludu" Temu -->
    <Color x:Key="PrimaryBackgroundColor">#4A148C</Color>
    <!-- Deep Purple -->
    <Color x:Key="SecondaryBackgroundColor">#6A1B9A</Color>
    <!-- Lighter Purple -->
    <Color x:Key="PrimaryTextColor">#F3E5F5</Color>
    <!-- Light Lavender -->
    <Color x:Key="SecondaryTextColor">#BDBDBD</Color>
    <!-- Gray -->
    <Color x:Key="BorderColor">#7B1FA2</Color>
    <!-- Medium Purple -->
    <Color x:Key="AccentColor">#00C853</Color>
    <!-- Bright Green -->

    <!-- Brush-evi koji koriste gore definisane boje -->
    <SolidColorBrush x:Key="ThemePrimaryBackgroundBrush" Color="{StaticResource PrimaryBackgroundColor}"/>
    <SolidColorBrush x:Key="ThemeSecondaryBackgroundBrush" Color="{StaticResource SecondaryBackgroundColor}"/>
    <SolidColorBrush x:Key="ThemePrimaryTextBrush" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="ThemeSecondaryTextBrush" Color="{StaticResource SecondaryTextColor}"/>
    <SolidColorBrush x:Key="ThemeBorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="ThemeAccentBrush" Color="{StaticResource AccentColor}"/>

</ResourceDictionary>